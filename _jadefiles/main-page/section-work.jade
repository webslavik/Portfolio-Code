include ../mixins/_include

// begin work main page

section.m-work
	.container

		h2.section-title Работы

		//- .m-work-icons
			.m-work-icon
				+icon('marker', 'icon-marker--mod')
				.title Прототипирование 
			.m-work-icon.icon-design
				+icon('layers', 'icon-layers--mod')
				.title Дизайн
			.m-work-icon
				+icon('code', 'icon-code--mod')
				.title Разработка 

		.m-work-list

			- var logos = ['svg/qlothes-cover.svg', 'svg/montessori-cover.svg', 'png/danceworld-cover.png', 'png/cmsmagazine-cover.png', 'svg/sab-cover.svg', 'png/chikkipizza-cover.png']
			- var coverColor = ['#d5ece1', '#c27871', '#f66b8f', '#e4e5e6', '#d0ba93', '#e3975a']
			- var projName = ['Qlothes','Montessori', 'DanceWorld', 'cmsmagazine', 'SAB', 'ChikkiPizza']
			- var logosSize = ['35', '45', '40', '55', '35', '30']
			- var link = ['/projects/2016/11/07/qlothes.html', '/projects/2016/11/06/montessori.html', '/projects/2016/11/05/danceworld.html', '/projects/2016/11/04/cmsmagazine.html', '/projects/2016/11/01/sab.html', '/projects/2016/11/01/chikki-pizza.html']

			- var i = 0;
			while (i++ < 6)

				a(href="#{link[i-1]}").m-work-item(style='background-image: url(assets/img/#{logos[i-1]}); background-color: #{coverColor[i-1]}; background-size: #{logosSize[i-1]}%;')
					.item-meta
						.title #{projName[i-1]}
						.descr #code
					.cover(style='background-color: #{coverColor[i-1]}')

		.m-work-btn-wrap
			+btn('/projects/', 'View Projects')





// end work main page